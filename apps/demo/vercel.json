{
  "buildCommand": "cd ../.. && yarn build:demo",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && yarn install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "DEMO_PASSWORD": "puck-demo-2024",
    "NEXT_PUBLIC_DEMO_PASSWORD": "puck-demo-2024"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/edit",
      "destination": "/edit"
    },
    {
      "source": "/(.*)/edit",
      "destination": "/$1/edit"
    }
  ]
}